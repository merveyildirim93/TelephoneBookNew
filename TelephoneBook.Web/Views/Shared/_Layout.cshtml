<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Telephone Directory</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
    <link href="~/newTheme/css/adminlte.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.12.1/r-2.3.0/datatables.min.css" />
    <link href="~/newTheme/plugins/sweetalert2/sweetalert2.css" rel="stylesheet" />
    <link href="~/newTheme/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <script src="~/js/jquery-1.9.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.12.1/r-2.3.0/datatables.min.js"></script>
    <script src="~/newTheme/js/adminlte.min.js"></script>
    <script src="~/newTheme/plugins/sweetalert2/sweetalert2.min.js"></script>
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Telephone Directory</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Person" asp-action="Index">Kişiler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Report" asp-action="Index">Raporlar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TelephoneDirectory.Web - <a asp-area="" asp-controller="Home" asp-action="Index">Kişiler</a>
        </div>
    </footer>

</body>
</html>

<script>
    function sweetAlert(tip, html, location) {
        if (tip == "success") {
            Swal.fire({
                html: html,
                title: "İşlem Başarılı",
                icon: "success",
                buttonsStyling: false,
                showConfirmButton: false,
                timer: 2500,
                timerProgressBar: true,
                willClose: () => {
                    if (location != null) {
                        window.location.href = location
                    }
                }
            });
        }
        else if (tip == "error") {
            Swal.fire({
                html: html,
                title: "Bir Hata Oluştu",
                icon: "error",
                buttonsStyling: false,
                showConfirmButton: false,
                timer: 2500,
                timerProgressBar: true,
                willClose: () => {
                    if (location != null) {
                        window.location.href = location
                    }
                }
            });
        }
    }
</script>